<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Melbourne Tours - JoyfulDay</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdn.jsdelivr.net/npm/nouislider@15.7.0/dist/nouislider.min.css" rel="stylesheet">
</head>

<body>
  <%- include('partials/header', { title: "Explore Melbourne Tours" }) %>

    <!-- Header Banner -->
    <section class="bg-primary text-white text-center py-5">
      <div class="container">
        <h1>Explore Melbourne's Top Tours</h1>
        <p class="lead">Find your perfect experience and adventure in Melbourne</p>
      </div>
    </section>

    <!-- Tour Listings -->
    <section class="py-4">
      <div class="container">
        <div class="row">
          <!-- Sidebar -->
          <aside class="col-md-3">
            <div class="card p-3 shadow-sm">
              <h5 class="fw-semibold mb-3">Filter & Search</h5>
              <form method="GET" action="/destinations">
                <!-- Search -->
                <div class="mb-3">
                  <input type="text" id="q" name="q" class="form-control" placeholder="Search destinations..."
                    value="<%= searchQuery %>">
                </div>

                <!-- Category -->
                <div class="mb-3">
                  <select name="category" id="category" class="form-select">
                    <option value="">All Categories</option>
                    <% categories.forEach(cat=> { %>
                      <option value="<%= cat %>" <%=selectedCategory===cat ? 'selected' : '' %>>
                        <%= cat.replace(/([a-z])([A-Z])/g, '$1 $2' ).replace(/^./, str=> str.toUpperCase()) %>
                      </option>
                      <% }) %>
                  </select>
                </div>
                <div class="mb-4">
                  <h5 class="fw-semibold mb-2">Filter by Price</h5>
                  <div class="d-flex gap-2">
                    <div class="input-group">
                      <span class="input-group-text">Min</span>
                      <input type="number" class="form-control" name="priceMin" id="price-min" value="<%= minPrice %>"
                        min="0">
                    </div>
                    <div class="input-group">
                      <span class="input-group-text">Max</span>
                      <input type="number" class="form-control" name="priceMax" id="price-max" value="<%= maxPrice %>"
                        min="0">
                    </div>
                  </div>
                </div>

                <button type="submit" class="btn btn-primary w-100">Apply</button>
              </form>
            </div>
          </aside>
          <!-- Tour Listings -->
          <div class="col-md-9">
            <div class="row row-cols-1 row-cols-md-3 g-4">
              <% tours.forEach(tour=> { %>
                <div class="col">
                  <div class="card h-100 tour-card" data-price="<%= tour.price %>">
                    <img src="<%= tour.imageUrl %>" class="card-img-top" alt="<%= tour.title %>">
                    <div class="card-body d-flex flex-column">
                      <h5 class="card-title">
                        <%= tour.title %>
                      </h5>
                      <p class="card-text">
                        <%= tour.description.substring(0, 100) %>...
                      </p>

                      <div class="mt-auto">
                        <p class="fw-bold">From A$<%= tour.price %>
                        </p>
                        <p class="text-muted">
                          Duration: 
                          <% if (tour.averageVisitDuration) { 
                              let dayType = '';
                              if (tour.averageVisitDuration >= 240) dayType = 'Half Day';
                              else if (tour.averageVisitDuration >= 480) dayType = 'Full Day';
                          %>
                            <% if (tour.averageVisitDuration <= 720) { %>
                              <%= Math.floor(tour.averageVisitDuration / 60) %>h
                            <% } else { %>
                              <%= dayType %>
                            <% } %>
                          <% } else { %>
                            N/A
                          <% } %> | Rating: <%= tour.rating.toFixed(2) || 'N/A' %>
                        </p>
                        <a href="/tour/<%= tour._id %>" class="btn btn-primary">View Details</a>
                      </div>
                    </div>
                  </div>
                </div>
                <% }) %>
            </div>
          </div>
        </div>
      </div>
      <!-- Pagination -->
      <nav aria-label="Tours Pagination" class="mt-4">
        <ul class="pagination justify-content-center">
          <% if (currentPage > 1) { %>
            <li class="page-item">
              <a class="page-link" href="?q=<%= searchQuery %>&category=<%= selectedCategory %>&priceMin=<%= minPrice %>&priceMax=<%= maxPrice %>&page=<%= currentPage - 1 %>">Previous</a>
            </li>
          <% } else { %>
            <li class="page-item disabled"><span class="page-link">Previous</span></li>
          <% } %>

          <% for(let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
              <a class="page-link"  <%= currentPage === i ? 'aria-current="page"' : '' %> href="?q=<%= searchQuery %>&category=<%= selectedCategory %>&priceMin=<%= minPrice %>&priceMax=<%= maxPrice %>&page=<%= i %>"><%= i %></a>
            </li>
          <% } %>

          <% if (currentPage < totalPages) { %>
            <li class="page-item">
              <a class="page-link" href="?q=<%= searchQuery %>&category=<%= selectedCategory %>&priceMin=<%= minPrice %>&priceMax=<%= maxPrice %>&page=<%= currentPage + 1 %>">Next</a>
            </li>
          <% } else { %>
            <li class="page-item disabled"><span class="page-link">Next</span></li>
          <% } %>
        </ul>
      </nav>
    </section>

    <%- include('partials/footer') %>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>