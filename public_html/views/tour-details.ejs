<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= tour.title %> - JoyfulDay
  </title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <%- include('partials/header', { title: "Explore Melbourne Tours" }) %>

    <section class="py-5">
      <div class="container">
        <!-- Breadcrumbs -->
        <nav aria-label="breadcrumb" class="mb-4">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/destinations">Destinations</a></li>
            <li class="breadcrumb-item active" aria-current="page">
              <%= tour.title %>
            </li>
          </ol>
        </nav>
        <% if (query?.canceled) { %>
          <div class="alert alert-warning">❌ Payment canceled. Please try again.</div>
          <% } %>

            <h2 class="mb-3 fw-bold">
              <%= tour.title %>
            </h2>
            <div class="row">
              <div class="col-md-6">
                <div class="h-100 d-flex align-items-center justify-content-center overflow-hidden rounded">
                  <img src="<%= tour.imageUrl %>" class="img-fluid" alt="<%= tour.title %>"
                    style="max-height: 500px; width: 100%; object-fit: cover;">
                </div>
              </div>
              <div class="col-md-6 d-flex">
                <div class="card h-100 w-100 d-flex flex-column justify-content-between">
                  <div class="card-body d-flex flex-column justify-content-between h-100">
                    <div>
                      <h4 class="fw-semibold mb-3 card-title">Tour Description</h4>
                      <p id="tourDescription" class="mb-3">
                        <span>
                          <%= tour.description %>
                        </span>
                      </p>
                    </div>
                    <div>
                      <h4 class="fw-semibold mb-3">Details</h4>
                      <ul class="list-unstyled">
                        <li class="mb-2">
                          <i class="bi bi-tags-fill me-2 text-primary"></i>
                          <strong>Category:</strong>
                          <%= tour.category.replace(/([a-z])([A-Z])/g, '$1 $2' ).replace(/^./, str=> str.toUpperCase())
                            %>
                        </li>
                        <li class="mb-2">
                          <i class="bi bi-hourglass-split me-2 text-info"></i>
                          <strong>Duration:</strong>
                          <% if (tour.averageVisitDuration) { let dayType='' ; if (tour.averageVisitDuration>= 240)
                            dayType
                            = 'Half Day';
                            else if (tour.averageVisitDuration >= 480) dayType = 'Full Day';
                            %>
                            <% if (tour.averageVisitDuration <=720) { %>
                              <%= Math.floor(tour.averageVisitDuration / 60) %> Hour(s)
                                <% } else { %>
                                  <%= dayType %>
                                    <% } %>
                                      <% } else { %>
                                        N/A
                                        <% } %>
                        </li>
                        <li>
                          <i class="bi bi-star-fill text-warning me-2"></i>
                          <strong>Rating:</strong>
                          <%= tour.rating.toFixed(2) %>
                        </li>
                      </ul>
                    </div>
                    <div class="mt-3 d-flex gap-3">
                      <% if (user) { %>
                        <button type="button" class="btn btn-success w-100" data-bs-toggle="modal"
                          data-bs-target="#bookTourModal">
                          Book Tour
                        </button>
                        <% const isBookmarked=user.bookmarkedTours.some(t=> t._id.toString() === tour._id.toString());
                          %>
                          <% if(isBookmarked) { %>
                            <a href="/member-information#bookmarks" class="btn btn-light w-100">View My Bookmarks</a>
                            <% } else { %>
                              <form action="/tour/<%= tour._id %>/bookmark" method="POST">

                                <button type="submit" class="btn btn-light w-100"><i
                                    class="bi bi-bookmark-plus-fill"></i></button>
                              </form>
                              <% } %>
                                <% } else { %>
                                  <a href="/login" class="btn btn-success w-100">Login to Bookmark</a>
                                  <% } %>
                    </div>
                  </div>
                </div>
              </div>

            </div>

      </div>
      </div>
    </section>
    <!-- Reviews Section -->
    <section class="py-5 bg-light">
      <div class="container">
        <h3 class="mb-4 fw-bold">Customer Reviews</h3>
        <div class="row row-cols-1 row-cols-md-2 g-4">
          <!-- Review 1 -->
          <div class="col">
            <div class="card h-100 shadow-sm">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title">Emily R.</h5>
                <p class="text-muted mb-2">⭐⭐⭐⭐⭐</p>
                <p class="card-text flex-grow-1">The Great Ocean Road tour was amazing! The scenery was
                  breathtaking and the guide was very knowledgeable. Highly recommend!</p>
                <p class="text-end text-muted mb-0"><small>Visited: Jan 2025</small></p>
              </div>
            </div>
          </div>
          <!-- Review 2 -->
          <div class="col">
            <div class="card h-100 shadow-sm">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title">James T.</h5>
                <p class="text-muted mb-2">⭐⭐⭐⭐</p>
                <p class="card-text flex-grow-1">A full-day adventure worth every dollar. The 12
                  Apostles were even more stunning than the pictures!</p>
                <p class="text-end text-muted mb-0"><small>Visited: Feb 2025</small></p>
              </div>
            </div>
          </div>
          <!-- Review 3 -->
          <div class="col">
            <div class="card h-100 shadow-sm">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title">Sophia L.</h5>
                <p class="text-muted mb-2">⭐⭐⭐⭐⭐</p>
                <p class="card-text flex-grow-1">Loved every moment! Comfortable bus, great guide, and
                  perfect stops for photos. A must-do tour in Melbourne!</p>
                <p class="text-end text-muted mb-0"><small>Visited: Mar 2025</small></p>
              </div>
            </div>
          </div>
          <!-- Review 4 -->
          <div class="col">
            <div class="card h-100 shadow-sm">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title">Liam K.</h5>
                <p class="text-muted mb-2">⭐⭐⭐⭐</p>
                <p class="card-text flex-grow-1">Beautiful coastline and well-organized tour. Great
                  value for money.</p>
                <p class="text-end text-muted mb-0"><small>Visited: Apr 2025</small></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>


    <%- include('partials/footer') %>
      <!-- Book Tour Modal -->
      <div class="modal fade" id="bookTourModal" tabindex="-1" aria-labelledby="bookTourModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-md">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="bookTourModalLabel">Book Tour: <%= tour.title %>
              </h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form id="bookingForm" class="needs-validation" novalidate data-tour-id="<%= tour._id %>">
                <!-- Tour Date -->
                <div class="mb-3">
                  <label for="tourDate" class="form-label">Select Date</label>
                  <input type="text" id="tourDate" class="form-control" placeholder="YYYY/MM/DD" required>
                  <div class="invalid-feedback">Please select a valid date.</div>
                </div>
                <!-- Number of Packages -->
                <div class="mb-3">
                  <label for="quantity" class="form-label">Number of Packages</label>
                  <input type="number" class="form-control" id="quantity" min="1" value="1" required>
                  <div class="invalid-feedback">
                    Please select at least 1 package.
                  </div>
                </div>
                <button type="submit" class="btn btn-primary w-100">Book & Pay</button>
              </form>
            </div>
          </div>
        </div>
      </div>


      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
      <script src="https://js.stripe.com/v3/"></script>
      <script src="../js/bookingScript.js"></script>
</body>

</html>